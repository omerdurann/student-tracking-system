<!doctype html>
<html lang="tr" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/assets/images/Lacivert.png" type="image/x-icon" />
    <title>Eğitim Yıldızı</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/plugins/dropify/css/dropify.min.css">
    <link rel="stylesheet" href="/assets/plugins/summernote/dist/summernote.css" />

    <!-- Core css -->
    <link rel="stylesheet" href="/assets/css/style.min.css" />
</head>

<body class="font-muli dark-mode gradient right_tb_toggle">

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
        </div>
    </div>

    <div id="main_content">
        <!-- Start Main top header -->
        <div id="header_top" class="header_top">
            <div class="container">
                <div class="hleft">
                    <a class="header-brand" href="index"><i class="fa fa-graduation-cap brand-logo"></i></a>
                    <div class="dropdown">
                        <a href="javascript:void(0)" class="nav-link icon menu_toggle"><i
                                class="fe fe-align-center"></i></a>
                    </div>
                </div>
                <div class="hright">
                    <a href="logout" class="nav-link icon settingbar"><i class="fe fe-power"></i></a>
                </div>
            </div>
        </div>
        <!-- Start Main leftbar navigation -->
        <div id="left-sidebar" class="sidebar">
            <h5 class="brand-name">Eğitim Yıldızı<a href="javascript:void(0)" class="menu_option float-right"><i
                        class="icon-grid font-16" data-toggle="tooltip" data-placement="left"
                        title="Grid & List Toggle"></i></a></h5>
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#menu-uni">Menü</a></li>
            </ul>
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="menu-uni" role="tabpanel">
                    <nav class="sidebar-nav">
                        <ul class="metismenu">
                            <li><a href="index"><i class="fa fa-dashboard"></i><span>Ana
                                        Sayfa</span></a></li>
                            <li><a href="students"><i class="fa fa-users"></i><span>Öğrenciler</span></a></li>
                            <li><a href="courses"><i class="fa fa-book"></i><span>Kütüphane</span></a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Start project content area -->
        <div class="page">
            <!-- Start Page header -->
            <div class="section-body" id="page_top">
                <div class="container-fluid">
                    <div class="page-header">
                        <br>
                        <br>
                    </div>
                </div>
            </div>
            <!-- Start Page title and tab -->
            <div class="section-body">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="header-action">
                            <h1 class="page-title">Kitap Düzenle</h1>
                            <ol class="breadcrumb page-breadcrumb">
                                <li class="breadcrumb-item"><a>Eğitim Yıldızı</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Kitap Düzenle</li>
                            </ol>
                        </div>
                        <ul class="nav nav-tabs page-header-tab">
                            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#edit-book">Kitap
                                    Düzenle</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Kitap Analizi-->
            <div class="section-body mt-4">
                <div class="container-fluid">
                    <div class="tab-content">
                        <div class="tab-pane active" id="Courses-add-Boot">
                            <div class="row">
                                {{#each allküt}}
                                <div class="col-xl-12 col-md-12">
                                    <div class="card card-aside">
                                        <a href="#" class="card-aside-column"
                                            style="background-image: url(/assets/images/sm/courses.jpeg)"></a>
                                        <div class="card-body d-flex flex-column">
                                            <h1 class="text-center">{{kit_adı}}</h1>
                                            <ul class="list-group">
                                                <li class="list-group-item">
                                                    <b>Ders </b>
                                                    <div class="pull-right">{{kit_ders}}</div>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Kitap Sınıfı</b>
                                                    <div class="pull-right">{{kit_snf}}</div>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Türü</b>
                                                    <div class="pull-right">{{kit_türü}}</div>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Basım Yılı</b>
                                                    <div class="pull-right">{{kit_basım}}</div>
                                                </li>
                                                <li class="list-group-item">
                                                    <b>Yayın Evi</b>
                                                    <div class="pull-right">{{kit_yayın}}</div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                                <div class="col-xl-12 col-md-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">Düzenle</h3>
                                            <div class="card-options ">
                                                <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i
                                                        class="fe fe-chevron-up"></i></a>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <form action="bookgun?id={{id}}"
                                                method="POST">
                                                <div class="row clearfix">
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Kitap Adı</label>
                                                            <input type="text" class="form-control" name="kit_adı"
                                                                style="color:#7d8490;" autocomplete="off">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Kitap Türü</label>
                                                            <input type="text" class="form-control" name="kit_türü"
                                                                style="color:#7d8490;" autocomplete="off">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Basım Yılı</label>
                                                            <input type="text" class="form-control" name="kit_basım"
                                                                style="color:#7d8490;" autocomplete="off">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <label>Kitap Sınıfı</label>
                                                        <select class="form-control show-tick" name="kit_snf"
                                                            style="color:#7d8490;">
                                                            <option value="">Sınıf Seçiniz...</option>
                                                            {{#each allsnf}}
                                                            <option value={{_id}}>{{sınıf}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <div class="form-group">
                                                            <label>Yayın Evi</label>
                                                            <input type="text" class="form-control" name="kit_yayın"
                                                                style="color:#7d8490;" autocomplete="off">
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6 col-sm-12">
                                                        <label>Kitap Dersi</label>
                                                        <select class="form-control show-tick" name="kit_ders"
                                                            style="color:#7d8490;">
                                                            <option value="">Sınıf Seçiniz...</option>
                                                            {{#each allders}}
                                                            <option value={{_id}}>{{ders}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-12">
                                                        <button
                                                            onclick="return confirm('DİKKAT!!! GÜNCELLEMEK İÇİN EMİN MİSİNİZ')"
                                                            type="submit" class="btn btn-primary">Güncelle</button>
                                                        <a href="courses" type="submit"
                                                            class="btn btn-outline-secondary">İptal</a>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Start Main project js, jQuery, Bootstrap -->
                        <script src="/assets/bundles/lib.vendor.bundle.js"></script>

                        <!-- Start Plugin Js -->
                        <script src="/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
                        <script src="/assets/plugins/dropify/js/dropify.min.js"></script>
                        <script src="/assets/bundles/summernote.bundle.js"></script>

                        <!-- Start project main js  and page js -->
                        <script src="/assets/js/core.js"></script>
                        <script src="/assets/js/form/dropify.js"></script>
                        <script src="/assets/js/page/summernote.js"></script>
</body>
</body>

</html>