<!doctype html>
<html lang="tr" dir="ltr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/assets/images/Lacivert.png" type="image/x-icon" />
    <title>Eğitim Yıldızı</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/plugins/sweetalert/sweetalert.css">
    <link rel="stylesheet" href="/assets/plugins/dropify/css/dropify.min.css">

    <!-- Core css -->
    <link rel="stylesheet" href="/assets/css/style.min.css" />
</head>

<body class="font-muli dark-mode gradient right_tb_toggle">

    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
        </div>
    </div>

    <div id="main_content">
        <!-- Start Main top header -->
        <div id="header_top" class="header_top">
            <div class="container">
                <div class="hleft">
                    <a class="header-brand" href="index"><i class="fa fa-graduation-cap brand-logo"></i></a>
                    <div class="dropdown">
                        <a href="javascript:void(0)" class="nav-link icon menu_toggle"><i
                                class="fe fe-align-center"></i></a>
                    </div>
                </div>
                <div class="hright">
                    <a href="logout" class="nav-link icon settingbar"><i class="fe fe-power"></i></a>
                </div>
            </div>
        </div>
        <!-- Start Main leftbar navigation -->
        <div id="left-sidebar" class="sidebar">
            <h5 class="brand-name">Eğitim Yıldızı<a href="javascript:void(0)" class="menu_option float-right"><i
                        class="icon-grid font-16" data-toggle="tooltip" data-placement="left"
                        title="Grid & List Toggle"></i></a></h5>
            <ul class="nav nav-tabs">
                <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#menu-uni">Menü</a></li>
            </ul>
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="menu-uni" role="tabpanel">
                    <nav class="sidebar-nav">
                        <ul class="metismenu">
                            <li><a href="index"><i class="fa fa-dashboard"></i><span>Ana Sayfa</span></a></li>
                            <li><a href="students"><i class="fa fa-users"></i><span>Öğrenciler</span></a></li>
                            <li class="active"><a href="courses"><i class="fa fa-book"></i><span>Kütüphane</span></a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Start project content area -->
        <div class="page">
            <!-- Start Page header -->
            <div class="section-body" id="page_top">
                <div class="container-fluid">
                    <div class="page-header">
                        <br>
                        <br>
                    </div>
                </div>
            </div>
            <!-- Start Page title and tab -->
            <div class="section-body">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center ">
                        <div class="header-action">
                            <h1 class="page-title">Kütüphane</h1>
                            <ol class="breadcrumb page-breadcrumb">
                                <li class="breadcrumb-item"><a>Eğitim Yıldızı</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Kütüphane</li>
                            </ol>
                        </div>
                        <ul class="nav nav-tabs page-header-tab">
                            <li class="nav-item"><a class="nav-link active" data-toggle="tab"
                                    href="#Courses-all">Listele</a></li>
                            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#Courses-add">Ekle</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Kütüphane-->
            <div class="section-body mt-4">
                <div class="container-fluid">
                    <div class="tab-content">
                        <div class="tab-pane active" id="Courses-all">
                            <div class="row row-deck">
                                <div class="card">
                                    <div class="card-body">
                                        <form action="search_book" method="POST">
                                            <div class="row">
                                                <div class="col-lg-4 col-md-4 col-sm-6">
                                                    <div class="input-group">
                                                        <input type="text" class="form-control" name="kit_adı"
                                                            autocomplete="off" style="color:#7d8490;"
                                                            placeholder="Kitap Adı">
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-md-4 col-sm-6">
                                                    <select class="form-control input-height" style="color:#7d8490;"
                                                        name="allders">
                                                        <option value="">Dersi Seçiniz...</option>
                                                        {{#each alldersadi}}
                                                        <option value={{_id}}>{{ders}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="col-lg-2 col-md-4 col-sm-6">
                                                    <select class="form-control input-height" style="color:#7d8490;"
                                                        name="allsınıf">
                                                        <option value="">Sınıfı Seçiniz...</option>
                                                        {{#each allsınıf}}
                                                        <option value={{_id}}>{{sınıf}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                                <div class="col-lg-2 col-md-4 col-sm-6">
                                                    <button type="submit"
                                                        class="btn btn-sm btn-primary btn-block">Ara</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                {{#each allkütüphane}}
                                <div class="col-xl-4 col-lg-4 col-md-6">
                                    <div class="card">
                                        <a href="bookanlz?id={{kit_id}}"><img class="card-img-top" src="/assets/images/sm/courses.jpeg"
                                                alt="" height="300"></a>
                                        <div class="card-body d-flex flex-column text-center">
                                            <h5>
                                                <a class="text-white" href="bookanlz?id={{kit_id}}">{{kit_adı}}</a>
                                            </h5>

                                            <div>
                                                <button type="button" class="btn btn-icon btn-sm" title="Edit"
                                                    data-toggle="tab"
                                                    onclick="location.href='edit-book?id={{kit_id}}';"><i
                                                        class="fa fa-edit"></i></button>
                                                <a type="button"
                                                            onclick="return confirm('DİKKAT!!! SİLMEK İÇİN EMİN MİSİNİZ')"
                                                            href='book_delete?id={{kit_id}}'><i
                                                                class="fa fa-trash-o text-danger"></i></a>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-striped table-vcenter mb-0">
                                                <tbody>
                                                    <tr>
                                                        <td class="w20"><i class="fa fa-calendar text-blue"></i></td>
                                                        <td class="tx-medium">Basım Yılı</td>
                                                        <td class="text-right">{{kit_basım}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><i class="fa fa-book text-danger"></i></td>
                                                        <td class="tx-medium">Ders</td>
                                                        <td class="text-right">{{kit_ders}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><i class="fa fa-book text-warning"></i></td>
                                                        <td class="tx-medium">Kitap Türü</td>
                                                        <td class="text-right">{{kit_türü}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><i class="fa fa-book text-green"></i></td>
                                                        <td class="tx-medium">Toplam Konu Sayısı</td>
                                                        <td class="text-right">{{konu_say}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><i class="fa fa-text-width text-cyan"></i></td>
                                                        <td class="tx-medium">Toplam Test Sayısı</td>
                                                        <td class="text-right">{{test_say}}</td>
                                                    </tr>
                                                    <tr>
                                                        <td><i class="fa fa-question text-lime"></i></td>
                                                        <td class="tx-medium">Toplam Soru Sayısı</td>
                                                        <td class="text-right">{{soru_say}}</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            </div>
                            <nav aria-label="Page navigation example">
                            </nav>
                        </div>
                        <!--Kitap Ekleme-->
                        <div class="tab-pane mb-4" id="Courses-add">
                            <div class="row clearfix">
                                <div class="container-fluid">
                                    <div class="card">
                                        <div class="card-header">
                                            <h3 class="card-title">TEMEL BİLGİLER</h3>
                                            <div class="card-options ">
                                                <a href="#" class="card-options-collapse" data-toggle="card-collapse"><i
                                                        class="fe fe-chevron-up"></i></a>
                                            </div>
                                        </div>
                                        <form class="card-body" action="add_kitap" enctype="multipart/form-data"
                                            method="POST">
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label">Kitap Adı<span
                                                        class="text-danger">*</span></label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" name="kitap_adi"
                                                        autocomplete="off" style="color:#7d8490;" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label">Kitap Sınıfı<span
                                                        class="text-danger">*</span></label>
                                                <div class="col-md-9">
                                                    <select class="form-control input-height" name="sinif"
                                                        style="color:#7d8490;" required>
                                                        <option value="">Sınıfı Seçiniz...</option>
                                                        {{#each allsınıf}}
                                                        <option value={{_id}}>{{sınıf}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label" style="color:#7d8490;">Kitap
                                                    Dersi<span class="text-danger">*</span></label>
                                                <div class="col-md-9">
                                                    <select class="form-control input-height" name="ders"
                                                        style="color:#7d8490;" required>
                                                        <option value="">Dersi Seçiniz...</option>
                                                        {{#each alldersadi}}
                                                        <option value={{_id}}>{{ders}}</option>
                                                        {{/each}}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label">Kitap Türü<span
                                                        class="text-danger">*</span></label>

                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" name="kitap_türü"
                                                        autocomplete="off" style="color:#7d8490;" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label">Kitap Basım Yılı <span
                                                        class="text-danger">*</span></label>
                                                <div class="col-md-9">
                                                    <input type="number" placeholder="YYYY" min="1000"
                                                        class="form-control" name="kitap_basım" autocomplete="off"
                                                        style="color:#7d8490;" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label class="col-md-3 col-form-label">Kitap Yayın Evi <span
                                                        class="text-danger">*</span></label>
                                                <div class="col-md-9">
                                                    <input type="text" class="form-control" name="kitap_yayın"
                                                        autocomplete="off" style="color:#7d8490;" required>
                                                </div>
                                            </div>
                                            <div class="col-sm-12">
                                                <button type="submit" class="btn btn-primary"
                                                    onclick="return confirm('DİKKAT!!! EKLEMEK İÇİN EMİN MİSİNİZ')">Ekle</button>

                                                <a href="courses" type="submit"
                                                    class="btn btn-outline-secondary">İptal</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br><br>
    </div>

    <!-- Start Main project js, jQuery, Bootstrap -->
    <script src="/assets/bundles/lib.vendor.bundle.js"></script>

    <!-- Start Plugin Js -->
    <script src="/assets/plugins/sweetalert/sweetalert.min.js"></script>
    <script src="/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
    <script src="/assets/plugins/dropify/js/dropify.min.js"></script>

    <!-- Start project main js  and page js -->
    <script src="/assets/js/core.js"></script>
    <script src="/assets/js/page/dialogs.js"></script>
    <script src="/assets/js/form/dropify.js"></script>
</body>

</html>